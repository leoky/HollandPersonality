<script>
  $('.carousel').carousel({
    interval: false
  }); 
  $(".myList").change(function() {
    $(this).toggleClass("selected");
  });

  $('a').click(function(){
    if($(this).is("#nextList")){
      $('#backList').fadeIn();
      $(this).hide();
      $("#listSubmit").show();
    }else{
      $(this).fadeOut("slow");
        $(this).hide();
         $("#listSubmit").hide();
      $("#nextList").show();
    }
  });

function myResult() {
   
    var arr = [];
    $.each($('input:checked'), function() {
      var value = $(this).val()
      arr.push(value)
    })
  console.log(arr)
      $.ajax({
           dataType:"json",
           type: "post",
           url: "/result",
           data:{
             arr:arr
           }
       }).done(function (result) {   
        $.get( "/done");

           $('.listResult').eq(0).text(result[0][0]);
           $('.listResult').eq(1).text(result[0][1]);
           $('.listResult').eq(2).text(result[1][0]);
           $('.listResult').eq(3).text(result[1][1]);
           $('.listResult').eq(4).text(result[2][0]);
           $('.listResult').eq(5).text(result[2][1]);
           var str = result[result.length-1].name;
              str = str.toLowerCase().replace(/\b[a-z]/g, function(letter) {
              return letter.toUpperCase();
           });
           $('#namePart').text('Hi '+str+'!');
           
       })
   }



</script>
